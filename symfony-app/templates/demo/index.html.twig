/**
 * Verificar estado del scheduler cada 5 segundos
 */
function checkSchedulerStatus() {
    fetch('/scraper/status')
        .then(response => response.json())
        .then(data => {
            const badge = document.querySelector('#schedulerStatus .badge');
            const statusText = document.getElementById('schedulerStatusText');

            if (!badge || !statusText) return;

            if (data.running) {
                badge.className = 'badge badge-success';
                statusText.innerHTML = `<i class="fas fa-sync-alt fa-spin"></i> Scraping (${data.iteration || 0})`;
            } else if (data.status === 'idle') {
                badge.className = 'badge badge-primary';
                const nextRun = data.nextRun ? new Date(data.nextRun) : null;
                if (nextRun) {
                    const mins = Math.max(0, Math.round((nextRun - new Date()) / 60000));
                    statusText.innerHTML = `<i class="fas fa-clock"></i> Pr√≥ximo: ${mins}m`;
                } else {
                    statusText.textContent = data.message || 'Esperando...';
                }
            } else if (data.status === 'error') {
                badge.className = 'badge badge-danger';
                statusText.innerHTML = `<i class="fas fa-exclamation-triangle"></i> Error`;
            } else {
                badge.className = 'badge badge-secondary';
                statusText.textContent = data.message || 'No iniciado';
            }
        })
        .catch(error => {
            console.error('Error obteniendo estado del scheduler:', error);
            const badge = document.querySelector('#schedulerStatus .badge');
            const statusText = document.getElementById('schedulerStatusText');
            if (badge && statusText) {
                badge.className = 'badge badge-secondary';
                statusText.innerHTML = '<i class="fas fa-times"></i> Desconectado';
            }
        });
}

