/**
 * Refrescar logs del scheduler
 */
function refrescarLogsScheduler() {
    Promise.all([
        fetch('/scraper/status').then(r => r.json()),
        fetch('/scraper/logs').then(r => r.json())
    ])
    .then(([statusData, logsData]) => {
        // Actualizar estado
        document.getElementById('schedulerLogsState').textContent =
            statusData.running ? 'Scraping activo' : (statusData.status || 'Idle');
        document.getElementById('schedulerLogsIteration').textContent =
            statusData.iteration || '-';

        const lastRun = statusData.lastRun ? new Date(statusData.lastRun).toLocaleString('es-CL') : '-';
        const nextRun = statusData.nextRun ? new Date(statusData.nextRun).toLocaleString('es-CL') : '-';

        document.getElementById('schedulerLogsLastRun').textContent = lastRun;
        document.getElementById('schedulerLogsNextRun').textContent = nextRun;

        // Actualizar estad√≠sticas del dashboard
        if (logsData.stats) {
            const stats = logsData.stats;
            document.getElementById('statTotal').textContent = stats.total_causas || 0;
            document.getElementById('statExitosas').textContent = stats.exitosas || 0;
            document.getElementById('statFallidas').textContent = stats.fallidas || 0;

            const tasaExito = stats.total_causas > 0
                ? Math.round((stats.exitosas / stats.total_causas) * 100)
                : 0;
            document.getElementById('statTasa').textContent = tasaExito + '%';

            // Actualizar tabla de causas exitosas
            const tbodyExitosas = document.querySelector('#tablaCausasExitosas tbody');
            if (stats.causas_procesadas && stats.causas_procesadas.length > 0) {
                tbodyExitosas.innerHTML = stats.causas_procesadas.map(causa => `
                    <tr>
                        <td class="text-center">${causa.orden}</td>
                        <td><strong>${causa.rit}</strong></td>
                        <td class="text-center">
                            <span class="badge badge-success">‚úÖ</span>
                        </td>
                    </tr>
                `).join('');
            } else {
                tbodyExitosas.innerHTML = `
                    <tr>
                        <td colspan="3" class="text-center text-muted py-3">
                            <small>No hay datos disponibles</small>
                        </td>
                    </tr>
                `;
            }

            // Actualizar tabla de causas fallidas
            const tbodyFallidas = document.querySelector('#tablaCausasFallidas tbody');
            if (stats.causas_fallidas && stats.causas_fallidas.length > 0) {
                tbodyFallidas.innerHTML = stats.causas_fallidas.map(causa => `
                    <tr>
                        <td class="text-center">${causa.orden}</td>
                        <td>
                            <strong>${causa.rit}</strong>
                            ${causa.error ? `<br><small class="text-muted">${escapeHtml(causa.error.substring(0, 50))}...</small>` : ''}
                        </td>
                        <td class="text-center">
                            <span class="badge badge-danger">‚ùå</span>
                        </td>
                    </tr>
                `).join('');
            } else {
                tbodyFallidas.innerHTML = `
                    <tr>
                        <td colspan="3" class="text-center text-success py-3">
                            <small><i class="fas fa-check"></i> Sin errores</small>
                        </td>
                    </tr>
                `;
            }
        }

        // Actualizar logs
        const terminal = document.getElementById('schedulerLogsTerminal');
        if (logsData.logs && logsData.logs.length > 0) {
            terminal.innerHTML = logsData.logs.map(line => {
                let color = '#00ff00'; // verde por defecto

                // Colorear seg√∫n contenido
                if (line.includes('‚ùå') || line.includes('Error')) color = '#ff4444';
                else if (line.includes('‚ö†Ô∏è')) color = '#ffaa00';
                else if (line.includes('‚úÖ')) color = '#00ff00';
                else if (line.includes('üîç') || line.includes('üåê')) color = '#00aaff';
                else if (line.includes('üìä') || line.includes('üìã')) color = '#00ffff';
                else if (line.includes('üîÑ')) color = '#ffff00';
                else if (line.includes('üíæ')) color = '#ff00ff';

                return `<div style="color:${color};margin-bottom:2px;">${escapeHtml(line)}</div>`;
            }).join('');

            // Auto-scroll al final
            terminal.scrollTop = terminal.scrollHeight;
        } else {
            terminal.innerHTML = '<div class="text-center text-muted py-5">No hay logs disponibles</div>';
        }
    })
    .catch(error => {
        console.error('Error cargando logs:', error);
        document.getElementById('schedulerLogsTerminal').innerHTML =
            '<div class="text-center text-danger py-5"><i class="fas fa-exclamation-triangle"></i> Error cargando logs</div>';
    });
}

/**
 * Iniciar auto-refresh de logs
 */
function iniciarAutoRefreshLogs() {
    detenerAutoRefreshLogs();
    schedulerLogsInterval = setInterval(() => {
        const modal = $('#modalSchedulerLogs');
        const autoRefresh = document.getElementById('autoRefreshLogs');

        if (modal.hasClass('show') && autoRefresh && autoRefresh.checked) {
            refrescarLogsScheduler();
        } else {
            detenerAutoRefreshLogs();
        }
    }, 3000); // Cada 3 segundos
}

/**
 * Detener auto-refresh de logs
 */
function detenerAutoRefreshLogs() {
    if (schedulerLogsInterval) {
        clearInterval(schedulerLogsInterval);
        schedulerLogsInterval = null;
    }
}

/**
 * Escapar HTML para prevenir XSS
 */
function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
}

// Event listeners para el modal de logs
$('#modalSchedulerLogs').on('shown.bs.modal', function() {
    const autoRefresh = document.getElementById('autoRefreshLogs');
    if (autoRefresh && autoRefresh.checked) {
        iniciarAutoRefreshLogs();
    }
});

$('#modalSchedulerLogs').on('hidden.bs.modal', function() {
    detenerAutoRefreshLogs();
});

document.getElementById('autoRefreshLogs')?.addEventListener('change', function() {
    if (this.checked) {
        iniciarAutoRefreshLogs();
    } else {
        detenerAutoRefreshLogs();
    }
});
