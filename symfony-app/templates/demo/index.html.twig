/**
 * Actualizar causa con scraping en tiempo real
 */
function actualizarCausa(rit) {
    // Resetear modal
    document.getElementById('progressRit').textContent = rit;
    document.getElementById('progressPercent').textContent = '0';
    document.getElementById('progressBar').style.width = '0%';
    document.getElementById('progressBar').textContent = '0%';
    document.getElementById('progressBar').setAttribute('aria-valuenow', '0');
    document.getElementById('progressStatus').innerHTML = '<i class="fas fa-info-circle"></i> Iniciando scraping...';
    document.getElementById('terminalLog').innerHTML = '';
    document.getElementById('btnCerrarProgreso').disabled = true;

    // Abrir modal
    $('#modalProgreso').modal('show');

    // Establecer conexi√≥n SSE
    const eventSource = new EventSource('/scraper/stream/' + encodeURIComponent(rit));
    let logLines = [];

    eventSource.onmessage = function(event) {
        const data = JSON.parse(event.data);

        // Actualizar progreso
        if (data.progress !== undefined) {
            const progress = Math.min(100, Math.max(0, data.progress));
            document.getElementById('progressPercent').textContent = progress;
            document.getElementById('progressBar').style.width = progress + '%';
            document.getElementById('progressBar').textContent = progress + '%';
            document.getElementById('progressBar').setAttribute('aria-valuenow', progress);
        }

        // Actualizar estado
        if (data.message) {
            const statusDiv = document.getElementById('progressStatus');
            let icon = 'info-circle';
            let alertClass = 'alert-info';

            if (data.type === 'success') {
                icon = 'check-circle';
                alertClass = 'alert-success';
            } else if (data.type === 'error' || data.type === 'warning') {
                icon = 'exclamation-triangle';
                alertClass = 'alert-warning';
            }

            statusDiv.className = 'alert mb-3 ' + alertClass;
            statusDiv.innerHTML = `<i class="fas fa-${icon}"></i> ${data.message}`;

            // Agregar a log
            const timestamp = new Date().toLocaleTimeString();
            const logLine = `[${timestamp}] ${data.message}`;
            logLines.push(logLine);

            const terminalLog = document.getElementById('terminalLog');
            terminalLog.innerHTML = logLines.map(line => {
                let color = '#00ff00'; // verde por defecto
                if (line.includes('Error') || line.includes('‚ùå')) color = '#ff4444';
                else if (line.includes('‚ö†Ô∏è')) color = '#ffaa00';
                else if (line.includes('‚úÖ')) color = '#00ff00';
                else if (line.includes('üîç') || line.includes('üåê')) color = '#00aaff';
                return `<div style="color:${color};margin-bottom:3px;">${line}</div>`;
            }).join('');

            // Auto-scroll al final
            terminalLog.scrollTop = terminalLog.scrollHeight;
        }

        // Completado
        if (data.type === 'complete') {
            eventSource.close();
            document.getElementById('btnCerrarProgreso').disabled = false;

            // Recargar p√°gina despu√©s de 2 segundos
            setTimeout(() => {
                location.reload();
            }, 2000);
        }
    };

    eventSource.onerror = function(error) {
        console.error('SSE Error:', error);
        eventSource.close();

        document.getElementById('progressStatus').className = 'alert mb-3 alert-danger';
        document.getElementById('progressStatus').innerHTML = '<i class="fas fa-exclamation-triangle"></i> Error de conexi√≥n con el servidor';
        document.getElementById('btnCerrarProgreso').disabled = false;
    };

    // Cerrar modal
    document.getElementById('btnCerrarProgreso').addEventListener('click', function() {
        eventSource.close();
        $('#modalProgreso').modal('hide');
    });
}

